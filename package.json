{
  "name": "stencila-js",
  "version": "0.3.2",
  "description": "Stencila components for Javascript",
  "main": "index.js",
  "scripts": {
    "lint": "eslint *.js src tests",
    "test": "tape tests | tap-spec",
    "test-bundle": "browserify tests/*.test.js > tests/bundle.temp.js",
    "test-browser": "browserify tests/*.test.js | testling",
    "test-documents": "rm -rf tmp && mkdir -p tmp && if [ ! -d 'tmp/stencila' ]; then git clone --depth=1 https://github.com/stencila/stencila tmp/stencila; fi && ln -sf `pwd`/tmp/stencila/tests/documents tests/documents",
    "cover": "istanbul cover tests",
    "docs": "documentation build --config docs/docs.yml --output docs --format html",
    "docs-serve": "documentation serve --config docs/docs.yml --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stencila/js.git"
  },
  "keywords": [
    "data",
    "documents",
    "sheets",
    "contexts",
    "sessions",
    "reproducibility",
    "science"
  ],
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/stencila/js/issues"
  },
  "homepage": "https://github.com/stencila/js#readme",
  "dependencies": {
    "buble": "^0.15.2",
    "d3": "^4.4.0",
    "gray-matter": "^2.1.0",
    "markdown-it": "^8.2.2",
    "markdown-it-deflist": "^2.0.1",
    "markdown-it-implicit-figures": "^0.5.0",
    "to-markdown": "^3.0.3",
    "xmlhttprequest": "^1.8.0"
  },
  "devDependencies": {
    "documentation": "^4.0.0-beta16",
    "eslint": "^3.12.2",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "glob": "^7.1.1",
    "istanbul": "^0.4.5",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.3",
    "testling": "^1.7.1"
  }
}
